<!doctype html>
<html lang="da">

<head>
    <% include ../../partials/template/head.ejs %>
</head>

<body>
    <% include ../../partials/template/header_admin.ejs %>
        <div id="top-wrapper">
            <div class="container" id="top-container">
                <% include ../../partials/template/header.ejs %>
            </div>
        </div>
        <div id="bottom-wrapper">
            <div class="container" id="main-container">
                <% include ../../partials/template/mainNav.ejs %>
                    <div class="row">
                        <div class="col-md-9">
                            <h1>
                                <%= kategorier[0].kategorinavn %>
                            </h1>
                            <div class="col-md-12" id="main-content">


                                <table class="table table-borderless">
                                    <tbody>
                                        <% kategorier.forEach(function(udstyr) { %>
                                            <tr class="row justify-content-between" id="tableRowType">
                                                <td class="col-md-7">
                                                    <h4>
                                                        <%= udstyr.producentnavn %>
                                                            <%= udstyr.model %>
                                                    </h4>

                                                    <% if (udstyr.beskrivelse.length > 185) { %>
                                                        <p>
                                                            <%= udstyr.beskrivelse.slice(0, 181) %> ...
                                                        </p>
                                                        <% } else { %>
                                                            <p>
                                                                <%= udstyr.beskrivelse %>
                                                            </p>
                                                            <% } %>

                                                                <div class="row justify-content-between">
                                                                    <div class="col-md-4">Pris:
                                                                        <%= udstyr.pris %> kr.
                                                                    </div>
                                                                    <div class="col-md-4"><a href="/udstyret/<%= udstyr.id %>">Mere
                                                                            info</a></div>

                                                                </div>
                                                </td>
                                                <td class="col-md-4">
                                                    <img class="card-img-top img-fluid" src="/images/udstyr/original/<%= udstyr.url %>" alt="<%= udstyr.model %>">
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                        <div class="col-md-3">
                            <h1>Tilbud</h1>
                            <div class="col-md-12" id="aside-content">
                                <div id="section-line"></div>
                                <% include ../../partials/content/tilbud.ejs %>
                            </div>
                        </div>
                    </div>
            </div>
            <div class="container" id="bottom-container">
                <% include ../../partials/template/footer.ejs %>
            </div>
        </div>
</body>
<% include ../../partials/template/scripts.ejs %>

</html>
